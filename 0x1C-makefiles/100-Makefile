# -*- MakeFile -*-

CC = gcc

SRC = main.c holberton.c

OBJ = $(SRC:.c=.o)

NAME = holberton

CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
